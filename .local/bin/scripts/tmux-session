#!/bin/bash

dir_to_look=""
cd $dir_to_look

folder=$(find * -type d 2>/dev/null | fzf)

# Verifica se a pasta selecionada existe
if [[ -d "$folder" ]]; then
    # Cria uma nova sessÃ£o no Tmux com o nome baseado no caminho da pasta
    session_name=$(basename "$folder")
    echo $session_name

    tmux_running=$(pgrep tmux)

    if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
        tmux new-session -s $session_name-c $folder
        exit 0
    fi

    if ! tmux has-session -t=$session_name 2> /dev/null; then
        tmux new-session -ds $session_name -c $folder
    fi

    tmux switch-client -t $session_name
fi
